{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__golemxv__.*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/gxv-block-direct-mcp.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/gxv-scope-guard.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/gxv-inbox-hook.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
